<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridview_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/grid_border"
    android:listSelector="@drawable/grid_view_selector"
    android:paddingTop="7dp"
    app:cardCornerRadius="12dp">

    <ImageView
        android:id="@+id/menushowimage"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rollrice" />

    <TextView
        android:id="@+id/menushowname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menushowimage"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/nanum_square_round_l"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menushowimage" />

    <TextView
        android:id="@+id/menushowprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/menushowname"
        android:layout_below="@+id/menushowname"
        android:fontFamily="@font/nanum_square_round_l"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menushowname" />
</android.support.constraint.ConstraintLayout>
